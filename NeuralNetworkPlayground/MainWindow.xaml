<Window x:Class="NeuralNetworkPlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetworkPlayground"
        mc:Ignorable="d"
        Title="MainWindow"  SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="400"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="2">
            <Canvas x:Name="canvas" Grid.Row="0" Height="400" Width="400" Background="White" Mouse.MouseDown="canvas_MouseDown"></Canvas>
        </Border>
        <StackPanel Grid.Row="1" Height="30" Background="LightBlue" Orientation="Horizontal">
            <Button x:Name="Clear" Height="30" Click="Clear_Click" >Clear</Button>
            <Button x:Name="Lear" Height="30" Click="Lear_Click" >Learn</Button>
            <Button x:Name="Print" Height="30" Click="Print_Click" >Print</Button>
            <Button x:Name="CheckLoss" Height="30" Click="CheckLoss_Click" >Loss</Button>
        </StackPanel>

    </Grid>
</Window>
